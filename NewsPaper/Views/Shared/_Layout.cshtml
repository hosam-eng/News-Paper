
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/jquery-1.8.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</head>
<body style="background-color: #F0F2F5">
    @if (Session["userid"] != null)
    {
        <div class="header">
            <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
                <div class="search">
                    <form class="d-flex">
                        <input class="form-control me-2" type="text" placeholder="Search">
                        <button class="btn btn-primary" type="button">Search</button>
                    </form>
                </div>
                <div class="mynavbar">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/News/show_news">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/User/profile/@Session["userid"]">profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/News/create">Create post</a>
                        </li>
                    </ul>
                </div>
                <div class="profile-pic">
                    <div class="dropdown">
                        <button class="dropbtn"></button>
                        <div class="dropdown-content">
                            <a href="/User/profile/@Session["userid"]">
                                profile
                            </a>
                            <a href="/User/edit/@Session["userid"]">
                                edit profile
                            </a>
                            <a href="/User/logout">
                                Log out
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
     }

            <div class="container-post">
                @RenderBody()
            </div>
            <script src="~/bootstrap/js/jquery.js"></script>
            <script src="~/bootstrap/js/bootstrap.bundle.js"></script>
    </body>
</html>
